<UserControl x:Class="BudgetApp.BillTrackerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetApp"
             xmlns:vms="clr-namespace:BudgetApp.ViewModels"
             xmlns:cvt="clr-namespace:IvieConverters;assembly=IvieConverters"
             mc:Ignorable="d">
    <Border BorderBrush="Black" BorderThickness="2" Height="300">
        <Grid d:DataContext="{x:Static vms:BillTrackerDesignModel.Instance}" Width="350">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>-->

            <TextBlock Text="{Binding CompanyName}" 
                   Width="350" FontSize="30"
                   HorizontalAlignment="Right"
                   TextTrimming="CharacterEllipsis"
                   
                   />
            <!--<ListView ItemsSource="{Binding BTList}" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.ColumnSpan="4" SelectedItem="{Binding CurrentBT}" SelectedIndex="0" Height="200" VerticalAlignment="Top"/>
        <Button Content="Add Company" Command="{Binding UpdateCommand}" Grid.Row="1"/>
        <Button Content="Remove Company" Grid.Row="1" Grid.Column="1"/>

        <ListView ItemsSource="{Binding Bills}" SelectedItem="{Binding CurrentBill}" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="162" VerticalAlignment="Top"/>-->


            <ListView x:Name="BillListView" Height="250" ItemsSource="{Binding Bills}" 
                      Visibility="{Binding IsContentAvailable,Converter={cvt:BooleanToVisibilityConverter}}"
                  Grid.Row="1" Grid.Column="0"
                  HorizontalAlignment="Right"
                      HorizontalContentAlignment="Right"
                      Background="Transparent"
                      BorderBrush="Transparent"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible"
                  SelectedItem="{Binding CurrentBVM}">
            </ListView>

            <TextBlock Text="No Bills To List..."
                       Grid.Row="1"
                       Grid.Column="0"
                       Margin="0 10 20 0"
                       Visibility="{Binding IsContentAvailable, Converter={cvt:BooleanToVisibilityConverter}, ConverterParameter=Invert}"
                       
                       FontSize="20"
                       HorizontalAlignment="Right"
                       />

            <!--<ContentControl Content="{Binding BVM}" Grid.Row="0" Grid.Column="6"/>-->
            <!--<ContentControl Content="{Binding BTVM}"/>-->

            <!--<Button Content="Add Bill" Command="{Binding AddCommand}" Grid.Row="1" Grid.Column="4"/>
        <Button Content="Remove Bill" Command="{Binding RemoveCommand}" Grid.Row="1" Grid.Column="5"/>-->
        </Grid>
    </Border>
</UserControl>
